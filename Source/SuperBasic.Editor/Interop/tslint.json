{
  "rules": {
    "no-consecutive-blank-lines": true,
    "eofline": true,
    "no-var-keyword": true,
    "triple-equals": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ],
    "member-access": [
      true,
      "check-constructor",
      "check-accessor"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "quotemark": [
      true,
      "double"
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ]
  }
}